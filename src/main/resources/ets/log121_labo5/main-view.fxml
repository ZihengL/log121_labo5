<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="ets.log121_labo5.controllers.MainController"
          vgap="10"
          prefWidth="1600" prefHeight="600">
    <columnConstraints>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
        <ColumnConstraints percentWidth="33.33"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="5" />
        <RowConstraints percentHeight="95" />
    </rowConstraints>

    <!--MENUBAR-->
    <MenuBar GridPane.rowIndex="0" GridPane.columnIndex="0"
             GridPane.columnSpan="3">
        <Menu text="Fichier">
            <MenuItem fx:id="saveAppStateItem" text="Sauvegarder état"/>
            <MenuItem fx:id="loadAppStateItem" text="Charger état"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="loadImageItem" text="Charger image"/>
            <SeparatorMenuItem/>
            <MenuItem fx:id="quitItem" text="Quitter"/>
        </Menu>

        <Menu text="Édition">
            <MenuItem fx:id="undoItem" text="Défaire"/>
            <MenuItem fx:id="redoItem" text="Refaire"/>
        </Menu>

        <Menu text="Presse-Papier">
            <MenuItem fx:id="pickStrategemItem" text="Stratégie"/>
        </Menu>
    </MenuBar>

    <!--THUMBNAIL-->
    <VBox fx:id="thumbnailPane"
          alignment="CENTER"
          GridPane.rowIndex="1" GridPane.columnIndex="0"
          style="-fx-border-color: blue">
        <ImageView fx:id="thumbnailImage"
                   preserveRatio="true"
                   fitWidth="${thumbnailPane.width}"
                   fitHeight="${thumbnailPane.height}" style="-fx-border-color: black"/>
    </VBox>

    <!--LEFTSIDE-->
    <fx:include fx:id="leftsidePane" source="image-navigator-view.fxml"
                GridPane.rowIndex="1" GridPane.columnIndex="1"/>
